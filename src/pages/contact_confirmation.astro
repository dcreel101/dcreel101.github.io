---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import dayjs from "dayjs";
import localizedFormat from "dayjs/plugin/localizedFormat";
import profile from "public/profile.jpg";
dayjs.extend(localizedFormat);
---

<BaseLayout title="Contact Me" description="Contact David Creel" image="" ogType="article">
    <main class="md:flex md:justify-center">
        <article class="prose prose-lg max-w-full min-w-5/6 prose-img:mx-auto w-5/6">
            <Image src={profile} alt="David Creel" class="rounded-lg w-1/3 min-w-48" />
            <h1 class="text-center title my-2 text-4xl font-bold">
                Contact Confirmed
            </h1>
            <p class="text-center">Thank you very much for contacting me! You will not receive an automated confirmation
                email, but I will do my best to make sure the contact form is always forwarding messages to me properly.
            </p>
            <p class="text-center">I prefer to limit my presence online, so please be patient.</p>
        </article>
    </main>
</BaseLayout>