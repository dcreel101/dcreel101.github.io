---
import BlogPostLayout from "@layouts/BlogPostLayout.astro";
import * as EntryUtils from "@lib/EntryUtils";
import type { BlogPost } from "src/content/config";
import MarkdownContent from "@components/MarkdownContent.astro";

export async function getStaticPaths() {
  const slugs = await EntryUtils.getCollectionSlugEntries<BlogPost>("blog");
  return slugs;
}

const { entryWrapper } = Astro.props;
---

<BlogPostLayout blogPost={entryWrapper}>
  <MarkdownContent
    entryWrapper={entryWrapper}
    slot="content"
    contentRenderer={Astro.props.render}
  />
</BlogPostLayout>
