---
import StoreItemLayout from "@layouts/StoreItemLayout.astro";
import * as EntryUtils from "@lib/EntryUtils";
import MarkdownContent from "@components/MarkdownContent.astro";

export async function getStaticPaths() {
  const slugs =
    await EntryUtils.getCollectionSlugEntries<EntryUtils.StoreItem>("store");
  return slugs;
}

const { entryWrapper } = Astro.props;
const { Content } = await Astro.props.render();
---

<StoreItemLayout storeItem={entryWrapper}>
  <MarkdownContent
    entryWrapper={entryWrapper}
    slot="content"
    contentRenderer={Astro.props.render}
  />
</StoreItemLayout>
