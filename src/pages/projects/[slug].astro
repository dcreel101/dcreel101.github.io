---
import ProjectLayout from "@layouts/ProjectLayout.astro";
import * as EntryUtils from "@lib/EntryUtils";

export async function getStaticPaths() {
  const slugs =
    await EntryUtils.getCollectionSlugEntries<EntryUtils.Project>("projects");
  return slugs;
}

const { entryWrapper } = Astro.props;
const { Content } = await Astro.props.render();
---

<ProjectLayout project={entryWrapper}>
  <Content slot="content" />
</ProjectLayout>
