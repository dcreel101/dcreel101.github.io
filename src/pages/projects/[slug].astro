---
import ProjectLayout from "@layouts/ProjectLayout.astro";
import * as EntryUtils from "@lib/EntryUtils";
import MarkdownContent from "@components/MarkdownContent.astro";

export async function getStaticPaths() {
  const slugs =
    await EntryUtils.getCollectionSlugEntries<EntryUtils.Project>("projects");
  return slugs;
}

const { entryWrapper } = Astro.props;
---

<ProjectLayout project={entryWrapper}>
  <MarkdownContent
    entryWrapper={entryWrapper}
    slot="content"
    contentRenderer={Astro.props.render}
  />
</ProjectLayout>
