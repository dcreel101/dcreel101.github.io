---
import HobbyLayout from "@layouts/HobbyLayout.astro";
import * as EntryUtils from "@lib/EntryUtils";
import MarkdownContent from "@components/MarkdownContent.astro";

export async function getStaticPaths() {
  const slugs =
    await EntryUtils.getCollectionSlugEntries<EntryUtils.Hobby>("hobbies");
  return slugs;
}

const { entryWrapper } = Astro.props;
---

<HobbyLayout hobby={entryWrapper}>
  <MarkdownContent
    entryWrapper={entryWrapper}
    slot="content"
    contentRenderer={Astro.props.render}
  />
</HobbyLayout>
