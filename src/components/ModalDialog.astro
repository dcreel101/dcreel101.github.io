---
import { Icon } from "astro-icon/components";

interface Props {
  id: string;
  width?: string;
  height?: string;
  widthClass?: string;
  heightClass?: string;
}

const {
  id,
  width,
  height,
  widthClass = "w-fit",
  heightClass = "h-fit",
} = Astro.props;

let styleProps = {};
if (width || height) {
  styleProps = {
    ...(width && { width: width }),
    ...(height && { height: height }),
  };
}

export function getShowDialogCode(id: string): string {
  return `${id}.showModal()`;
}
---

<dialog id={id} class="modal">
  <div
    class=`modal-box relative ${widthClass} max-w-[95vw] ${heightClass} max-h-[90vh] overflow-hidden`
    style={styleProps}
  >
    {/* close button */}
    <form method="dialog">
      <div class="absolute top-6 right-6 w-12 h-12 z-50">
        <button class="btn btn-ghost btn-square size-full focus:outline-none">
          <Icon name="close" is:inline={true} class="size-full" />
        </button>
      </div>
    </form>
    <slot />
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
