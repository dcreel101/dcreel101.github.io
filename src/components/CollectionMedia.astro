---
import { type ImageMetadata } from "astro";
import LightboxImage from "@components/LightboxImage.astro";
import { Image } from "astro:assets";

interface Props {
  media: ImageMetadata;
  alt?: string;
  class?: string;
  useLightbox?: boolean;
}

const { media, alt = "", class: className, useLightbox = false } = Astro.props;
---

{useLightbox && <LightboxImage media={media} caption={alt} class={className} />}
{
  !useLightbox && (
    <Image
      src={media}
      alt={alt}
      class={className + " object-cover object-center rounded-box"}
    />
  )
}
