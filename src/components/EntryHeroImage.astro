---
import * as EntryUtils from "@lib/EntryUtils";
import CollectionMedia from "@components/CollectionMedia.astro";

interface Props {
  entry: EntryUtils.Entry;
}

const { entry } = Astro.props;
---

{
  entry.heroImage && (
    <CollectionMedia
      media={entry.heroImage}
      alt={entry.title}
      class="w-full max-h-[32rem]"
      useLightbox={true}
    />
  )
}
