---
import { Icon } from "astro-icon/components";
export type Props = {
  src: string;
  alt?: string;
  imgClass?: string;
};

const { src, alt, imgClass } = Astro.props;
const dialogId = "daisyLightbox_" + Math.random().toString(16).slice(2);
---

<img
  onclick=`${dialogId}.showModal()`
  src={src}
  alt={alt}
  class={imgClass + " rounded-xl cursor-pointer"}
/>
<dialog id={dialogId} class="modal">
  <div class="modal-box w-11/12 max-w-5xl">
    <form method="dialog">
      <h3 class="absolute left-1/12 -top-6">{alt}</h3>
      <button class="btn btn-md btn-circle btn-ghost absolute right-2 top-2"
        ><Icon name="close" class="h-2/3 w-2/3" is:inline={true} /></button
      >
    </form>
    <img src={src} alt={alt} class="rounded-xl" />
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
